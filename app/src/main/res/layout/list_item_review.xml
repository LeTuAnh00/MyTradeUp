<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewReviewer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_avatar_placeholder"
            app:civ_border_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_avatar_placeholder" />

        <!-- More Options -->
        <ImageButton
            android:id="@+id/buttonMoreOptions"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tùy chọn"
            android:padding="4dp"
            android:scaleType="center"
            android:src="@drawable/ic_more_vert_24"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#616161"
            tools:ignore="TouchTargetSizeCheck"
            tools:visibility="visible" />

        <!-- Reviewer Name -->
        <TextView
            android:id="@+id/textViewReviewerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reviewer_name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewReviewer"
            app:layout_constraintEnd_toStartOf="@id/buttonMoreOptions" />

        <!-- Rating -->
        <RatingBar
            android:id="@+id/ratingBarReview"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:layout_marginTop="4dp"
            android:progressTint="@color/star_gold"
            app:layout_constraintTop_toBottomOf="@id/textViewReviewerName"
            app:layout_constraintStart_toStartOf="@id/textViewReviewerName"
            tools:rating="4" />

        <!-- Comment -->
        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:textSize="14sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Sản phẩm rất tốt, giao dịch nhanh chóng, rất hài lòng."
            app:layout_constraintTop_toBottomOf="@id/ratingBarReview"
            app:layout_constraintStart_toStartOf="@id/ratingBarReview"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textViewComment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
