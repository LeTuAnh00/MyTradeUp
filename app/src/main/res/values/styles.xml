<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Chủ đề chính của ứng dụng -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu chủ đạo -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>

        <!-- Nền và văn bản -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Kiểu bo góc mặc định cho thành phần UI -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.CornerSize10Percent</item>
    </style>

    <!-- Bo góc 10% -->
    <style name="ShapeAppearance.App.CornerSize10Percent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">10%</item>
    </style>

    <!-- Style cho Button viền ngoài -->
    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

</resources>
